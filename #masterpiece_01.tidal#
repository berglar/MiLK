bps 0.55
hush

d1 $ sound $ sometimes (rev) $ "[pno:0 pno:1 pno:2 pno:3]/4"

d2 $ sound "[numbers:1 numbers:2 numbers:3 numbers:4]/4"

d2 $ silence

d3 $ sound "[tabla:4 tabla:3 tabla:3 tabla:3]" 
  |+| gain "0.75"

d1 $ striate 8 $ sound "[lk:1]*16"
  |+| gain "0.7"
  
d2 $ every 2 (0.2 <~) $ striate 2 (sound "kk:2")
  |+| speed "[1 1.2 1.47]/4"

d3 $ sound "lk:4"

d1 $ sound (pick <$> "[pno]" <*> run 2)
